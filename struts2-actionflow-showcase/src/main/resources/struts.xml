<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="false" />
	<constant name="struts.locale" value="en" />

	<!-- simple example -->
	<package name="actionflow-showcase" namespace="/" extends="actionflow-default">
		
		<action name="index">
			<result>/WEB-INF/pages/homepage.jsp</result>
		</action>
		
		<action name="start" class="com.amashchenko.struts2.actionflow.showcase.SimpleWizardAction">
			<result>/WEB-INF/pages/name.jsp</result>
		</action>
		
		<action name="saveName" method="saveName" class="com.amashchenko.struts2.actionflow.showcase.SimpleWizardAction">
			<param name="actionFlowStep">1</param>
			
			<result name="input">/WEB-INF/pages/name.jsp</result>
			<result name="error">/WEB-INF/pages/name.jsp</result>
			<result type="redirectAction">view</result>
		</action>
		<action name="savePhone" method="savePhone" class="com.amashchenko.struts2.actionflow.showcase.SimpleWizardAction">
			<param name="actionFlowStep">2</param>
		
			<result name="input">/WEB-INF/pages/phone.jsp</result>
			<result name="error">/WEB-INF/pages/phone.jsp</result>
			<result type="redirectAction">view</result>
		</action>
		<action name="saveEmail" method="saveEmail" class="com.amashchenko.struts2.actionflow.showcase.SimpleWizardAction">
			<param name="actionFlowStep">3</param>
		
			<result name="input">/WEB-INF/pages/email.jsp</result>
			<result name="error">/WEB-INF/pages/email.jsp</result>
			<result type="redirectAction">finish</result>
		</action>
		
		<action name="finish" class="com.amashchenko.struts2.actionflow.showcase.SimpleWizardAction">
			<result>/WEB-INF/pages/finish.jsp</result>
		</action>
		
	</package>
	
	
	<!-- advanced example -->
	<package name="actionflow-advanced-showcase" namespace="/advanced" extends="struts-default">
		
		<interceptors>
			<interceptor name="actionflow" class="com.amashchenko.struts2.actionflow.ActionFlowInterceptor" />
			
			<interceptor-stack name="actionflowDefaultStack">
				<interceptor-ref name="actionflow">
					<param name="nextActionName">nextAction</param>
					<param name="prevActionName">prevAction</param>
				</interceptor-ref> 
				<interceptor-ref name="defaultStack"/>
			</interceptor-stack>
		</interceptors>	
				
		<default-interceptor-ref name="actionflowDefaultStack" />
		
		<global-results>
			<result name="actionFlowViewResult" type="redirectAction">${viewAction}</result>
		</global-results>
		
		<action name="nextAction">
			<result type="chain">${nextAction}</result>
		</action>
		<!-- cannot be used for different (not wizard) purposes -->
		<action name="prevAction" class="com.amashchenko.struts2.actionflow.showcase.SimpleWizardAction">
			<result type="redirectAction">${prevAction}</result>
		</action>
		
		<action name="start" class="com.amashchenko.struts2.actionflow.showcase.SimpleWizardAction">
			<result>/WEB-INF/advanced/name.jsp</result>
		</action>
		
		<action name="saveName" method="saveName" class="com.amashchenko.struts2.actionflow.showcase.SimpleWizardAction">
			<param name="actionFlowStep">1</param>
			
			<result name="input">/WEB-INF/advanced/name.jsp</result>
			<result name="error">/WEB-INF/advanced/name.jsp</result>
			<result type="redirectAction">viewAction</result>
		</action>
		<action name="savePhone" method="savePhone" class="com.amashchenko.struts2.actionflow.showcase.SimpleWizardAction">
			<param name="actionFlowStep">2</param>
		
			<result name="input">/WEB-INF/advanced/phone.jsp</result>
			<result name="error">/WEB-INF/advanced/phone.jsp</result>
			<result type="redirectAction">viewAction</result>
		</action>
		
		<!-- overriding view -->
		<action name="savePhoneView" class="com.amashchenko.struts2.actionflow.showcase.SimpleWizardAction">
			<result>/WEB-INF/advanced/anotherPhone.jsp</result>
		</action>
		
		<action name="saveEmail" method="saveEmail" class="com.amashchenko.struts2.actionflow.showcase.SimpleWizardAction">
			<param name="actionFlowStep">3</param>
		
			<result name="input">/WEB-INF/advanced/email.jsp</result>
			<result name="error">/WEB-INF/advanced/email.jsp</result>
			<result type="redirectAction">finish</result>
		</action>

		<action name="finish" class="com.amashchenko.struts2.actionflow.showcase.SimpleWizardAction">
			<result>/WEB-INF/advanced/finish.jsp</result>
		</action>
		
	</package>

</struts>